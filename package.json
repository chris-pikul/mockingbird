{
    "name": "mockingbird",
    "displayName": "Mockingbird",
    "description": "Generate data for mocks and testing with ease",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "properties": {
                "mockingbird.contextMenu.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enables the use of the context-menu to quickly insert data"
                }
            }
        },
        "commands": [
            {
                "command": "mb.real.currentISOTimestamp",
                "title": "Insert: Current ISO Timestamp",
                "shortTitle": "ISO Timestamp"
            },
            {
                "command": "mb.real.date-time.currentISODate",
                "title": "Insert: Current ISO Date",
                "shortTitle": "ISO Date"
            },
            {
                "command": "mb.real.date-time.currentISOTime",
                "title": "Insert: Current ISO Time",
                "shortTitle": "ISO Time"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "mockingbird",
                    "group": "navigation",
                    "when": "config.mockingbird.contextMenu.enabled"
                }
            ],
            "mockingbird": [
                {
                    "submenu": "mockingbird/real"
                }
            ],
            "mockingbird/real": [
                {
                    "submenu": "mockingbird/real/date-time"
                },
                {
                    "command": "mb.real.currentISOTimestamp"
                }
            ],
            "mockingbird/real/date-time": [
                {
                    "command": "mb.real.date-time.currentISODate"
                },
                {
                    "command": "mb.real.date-time.currentISOTime"
                }
            ]
        },
        "submenus": [
            {
                "id": "mockingbird",
                "label": "Mockingbird"
            },
            {
                "id": "mockingbird/real",
                "label": "Real"
            },
            {
                "id": "mockingbird/real/date-time",
                "label": "Date Time"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "commands": "node ./scripts/fill-commands.mjs"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.2.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "prettier": "^3.0.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    },
    "dependencies": {
        "date-fns": "^2.30.0"
    }
}